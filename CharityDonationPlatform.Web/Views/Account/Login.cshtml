@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="py-5" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); min-height: 100vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card border-0" style="border-radius: 20px; box-shadow: 0 20px 40px rgba(0,0,0,0.1); overflow: hidden;">
                    <!-- Header -->
                    <div class="card-header border-0 text-center" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); padding: 40px 30px;">
                        <h2 class="fw-bold mb-2" style="color: white;">
                            <i class="fas fa-sign-in-alt me-2"></i>Welcome Back
                        </h2>
                        <p class="mb-0" style="color: rgba(255,255,255,0.9);">Sign in to continue making a difference</p>
                    </div>

                    <!-- Body -->
                    <div class="card-body" style="padding: 40px 30px;">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert" style="border-radius: 12px; border: none; background-color: #fef2f2; color: #dc2626;"></div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold" style="color: #1e293b; font-size: 0.95rem;">Email Address</label>
                                <input asp-for="Email" class="form-control" style="border-radius: 12px; border: 2px solid #e2e8f0; padding: 12px 16px; font-size: 1rem; transition: all 0.3s ease;" placeholder="Enter your email address" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-semibold" style="color: #1e293b; font-size: 0.95rem;">Password</label>
                                <input asp-for="Password" class="form-control" style="border-radius: 12px; border: 2px solid #e2e8f0; padding: 12px 16px; font-size: 1rem; transition: all 0.3s ease;" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" style="border-radius: 4px; border: 2px solid #e2e8f0;" />
                                    <label asp-for="RememberMe" class="form-check-label" style="color: #64748b;">
                                        Remember me
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary fw-bold py-3" style="background: linear-gradient(135deg, #2563eb, #1d4ed8); border: none; border-radius: 12px; font-size: 1.1rem; transition: all 0.3s ease;">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="mb-3" style="color: #64748b;">
                                    <a asp-controller="Account" asp-action="ForgotPassword" style="color: #2563eb; text-decoration: none; font-weight: 500;">
                                        Forgot your password?
                                    </a>
                                </p>
                                <p class="mb-0" style="color: #64748b;">
                                    Don't have an account?
                                    <a asp-action="Register" style="color: #2563eb; text-decoration: none; font-weight: 600;">
                                        Register here
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="text-center mt-4">
                    <p class="text-muted">
                        <i class="fas fa-shield-alt me-2" style="color: #2563eb;"></i>
                        Your data is protected with enterprise-grade security
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .form-control:focus {
        border-color: #2563eb !important;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25) !important;
    }

    .form-check-input:checked {
        background-color: #2563eb;
        border-color: #2563eb;
    }

    .form-check-input:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25);
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(37, 99, 235, 0.3);
    }

    a:hover {
        text-decoration: underline !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}