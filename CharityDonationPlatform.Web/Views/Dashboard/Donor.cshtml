@model DonorDashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Welcome Back!</h1>
            <p class="lead text-muted">Track your impact and discover new causes</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card bg-gradient-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3>$@Model.TotalDonationAmount.ToString("N2")</h3>
                            <p class="mb-0">Total Donated</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-heart fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card bg-gradient-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3>@Model.TotalCampaignsSupported</h3>
                            <p class="mb-0">Campaigns Supported</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-bullhorn fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Donations -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Donations</h5>
                    <a asp-controller="Donations" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        View All
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.RecentDonations.Any())
                    {
                        @foreach (var donation in Model.RecentDonations)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                <div>
                                    <h6 class="mb-1">@donation.CampaignTitle</h6>
                                    <small class="text-muted">@donation.DonationDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="text-end">
                                    <span class="fw-bold text-success">$@donation.Amount.ToString("N0")</span>
                                    <br><span class="badge bg-@(donation.Status == "Completed" ? "success" : "warning") badge-sm">@donation.Status</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-heart fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No donations yet</p>
                            <a asp-controller="Campaigns" asp-action="Index" class="btn btn-primary btn-sm">
                                Start Donating
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Supported Campaigns -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bookmark me-2"></i>Campaigns I Support</h5>
                </div>
                <div class="card-body">
                    @if (Model.SupportedCampaigns.Any())
                    {
                        @foreach (var campaign in Model.SupportedCampaigns.Take(3))
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <img src="@(string.IsNullOrEmpty(campaign.ImageUrl) ? "/images/default-campaign.jpg" : campaign.ImageUrl)"
                                     alt="@campaign.Title" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;" />
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@campaign.Title</h6>
                                    <div class="progress mb-1" style="height: 4px;">
                                        <div class="progress-bar" style="width: @campaign.ProgressPercentage%"></div>
                                    </div>
                                    <small class="text-muted">@campaign.ProgressPercentage.ToString("F1")% funded</small>
                                </div>
                                <div class="ms-2">
                                    <a asp-controller="Campaigns" asp-action="Details" asp-route-id="@campaign.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No supported campaigns</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recommended Campaigns -->
    @if (Model.RecommendedCampaigns.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>Recommended for You</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var campaign in Model.RecommendedCampaigns)
                            {
                                <div class="col-lg-4 mb-3">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <img src="@(string.IsNullOrEmpty(campaign.ImageUrl) ? "/images/default-campaign.jpg" : campaign.ImageUrl)"
                                             class="card-img-top" alt="@campaign.Title" style="height: 150px; object-fit: cover;" />
                                        <div class="card-body">
                                            <h6 class="card-title">@campaign.Title</h6>
                                            <div class="progress mb-2" style="height: 6px;">
                                                <div class="progress-bar" style="width: @campaign.ProgressPercentage%"></div>
                                            </div>
                                            <div class="d-flex justify-content-between small text-muted mb-3">
                                                <span>$@campaign.AmountRaised.ToString("N0") raised</span>
                                                <span>@campaign.DaysLeft days left</span>
                                            </div>
                                            <div class="d-flex gap-2">
                                                <a asp-controller="Campaigns" asp-action="Details" asp-route-id="@campaign.Id"
                                                   class="btn btn-outline-primary btn-sm flex-fill">
                                                    View
                                                </a>
                                                <a asp-controller="Donations" asp-action="Donate" asp-route-campaignId="@campaign.Id"
                                                   class="btn btn-success btn-sm">
                                                    <i class="fas fa-donate"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a asp-controller="Campaigns" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Discover More Campaigns
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #6610f2 100%);
    }
</style>
