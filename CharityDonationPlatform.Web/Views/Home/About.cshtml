@{
    ViewData["Title"] = "About";
}

<!-- Header Section -->
<section class="py-5 text-white" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">About Our Mission</h1>
                <p class="lead mb-0" style="font-size: 1.3rem; max-width: 600px; margin: 0 auto;">
                    Empowering communities through transparent, impactful charitable giving
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Our Story Section -->
<section class="py-5" style="background: white; padding: 100px 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h2 class="display-5 fw-bold mb-4" style="color: #1e293b;">Our Story</h2>
                <p class="lead mb-4" style="color: #475569; font-size: 1.2rem; line-height: 1.7;">
                    Founded with a simple belief: every person deserves the opportunity to make a difference in the world.
                </p>
                <p class="mb-4" style="color: #64748b; font-size: 1.1rem; line-height: 1.7;">
                    Our platform was born from the recognition that meaningful change happens when passionate donors connect with verified, impactful charitable campaigns. We've eliminated the barriers between generous hearts and urgent causes.
                </p>
                <p class="mb-0" style="color: #64748b; font-size: 1.1rem; line-height: 1.7;">
                    Since our inception, we've facilitated millions in donations, supported hundreds of campaigns, and created lasting change in communities around the globe.
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-users" style="font-size: 12rem; color: #cbd5e1; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Our Values Section -->
<section class="py-5" style="background-color: #f8fafc; padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold mb-3" style="color: #1e293b;">Our Core Values</h2>
                <p class="lead text-muted">The principles that guide everything we do</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card h-100 border-0 text-center" style="background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
                    <i class="fas fa-shield-alt mb-4" style="font-size: 3.5rem; color: #2563eb;"></i>
                    <h4 class="fw-bold mb-3" style="color: #1e293b;">Transparency</h4>
                    <p class="text-muted mb-0" style="line-height: 1.6;">
                        Every donation is tracked, every campaign is verified, and every impact is measurable. You always know where your money goes.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 border-0 text-center" style="background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
                    <i class="fas fa-heart mb-4" style="font-size: 3.5rem; color: #2563eb;"></i>
                    <h4 class="fw-bold mb-3" style="color: #1e293b;">Compassion</h4>
                    <p class="text-muted mb-0" style="line-height: 1.6;">
                        We believe in the power of human kindness and work to amplify the generosity that exists in every community.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 border-0 text-center" style="background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
                    <i class="fas fa-globe mb-4" style="font-size: 3.5rem; color: #2563eb;"></i>
                    <h4 class="fw-bold mb-3" style="color: #1e293b;">Impact</h4>
                    <p class="text-muted mb-0" style="line-height: 1.6;">
                        We measure success not in dollars raised, but in lives changed, communities strengthened, and futures brightened.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Impact Statistics -->
<section class="py-5" style="background: white; padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold mb-3" style="color: #1e293b;">Our Impact</h2>
                <p class="lead text-muted">Real numbers, real change</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-4 text-center">
                <div class="mb-3">
                    <h2 class="fw-bold" style="color: #2563eb; font-size: 3rem;">$2.5M+</h2>
                </div>
                <p class="text-muted mb-0" style="font-size: 1.1rem;">Total Donations</p>
            </div>
            <div class="col-md-3 mb-4 text-center">
                <div class="mb-3">
                    <h2 class="fw-bold" style="color: #2563eb; font-size: 3rem;">150+</h2>
                </div>
                <p class="text-muted mb-0" style="font-size: 1.1rem;">Campaigns Funded</p>
            </div>
            <div class="col-md-3 mb-4 text-center">
                <div class="mb-3">
                    <h2 class="fw-bold" style="color: #2563eb; font-size: 3rem;">5,000+</h2>
                </div>
                <p class="text-muted mb-0" style="font-size: 1.1rem;">Lives Impacted</p>
            </div>
            <div class="col-md-3 mb-4 text-center">
                <div class="mb-3">
                    <h2 class="fw-bold" style="color: #2563eb; font-size: 3rem;">25+</h2>
                </div>
                <p class="text-muted mb-0" style="font-size: 1.1rem;">Countries Reached</p>
            </div>
        </div>
    </div>
</section>

<!-- How We Work Section -->
<section class="py-5" style="background-color: #f8fafc; padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold mb-3" style="color: #1e293b;">How We Work</h2>
                <p class="lead text-muted">Our commitment to excellence and accountability</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 mb-5">
                <div class="d-flex">
                    <div class="flex-shrink-0 me-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                            <i class="fas fa-search" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-3" style="color: #1e293b;">Rigorous Verification</h4>
                        <p class="text-muted mb-0" style="line-height: 1.6;">
                            Every campaign undergoes thorough verification before going live. We validate organizations, review documentation, and ensure funds will be used as intended.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-5">
                <div class="d-flex">
                    <div class="flex-shrink-0 me-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                            <i class="fas fa-chart-line" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-3" style="color: #1e293b;">Continuous Monitoring</h4>
                        <p class="text-muted mb-0" style="line-height: 1.6;">
                            We don't just fund and forget. Our team continuously monitors campaign progress, ensuring transparency and providing regular updates to donors.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-5">
                <div class="d-flex">
                    <div class="flex-shrink-0 me-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                            <i class="fas fa-users" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-3" style="color: #1e293b;">Community Support</h4>
                        <p class="text-muted mb-0" style="line-height: 1.6;">
                            Our platform fosters a community of like-minded individuals committed to making a difference. Connect, share, and amplify your impact together.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-5">
                <div class="d-flex">
                    <div class="flex-shrink-0 me-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                            <i class="fas fa-medal" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-3" style="color: #1e293b;">Impact Reporting</h4>
                        <p class="text-muted mb-0" style="line-height: 1.6;">
                            Receive detailed reports on how your donations are making a difference. See the tangible outcomes of your generosity with real stories and data.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 text-white" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); padding: 100px 0;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-4">Join Our Mission</h2>
                <p class="lead mb-5" style="font-size: 1.3rem; line-height: 1.6;">
                    Be part of a community that's changing the world, one donation at a time. Your generosity creates ripples of positive change.
                </p>
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    <a asp-controller="Campaigns" asp-action="Index" class="btn btn-light btn-lg px-5 py-3" style="border-radius: 50px; font-weight: 600; color: #2563eb;">
                        <i class="fas fa-search me-2"></i>Browse Campaigns
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg px-5 py-3" style="border-radius: 50px; font-weight: 600; border-width: 2px;">
                            <i class="fas fa-user-plus me-2"></i>Get Started
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>