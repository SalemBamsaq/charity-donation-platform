@{
    ViewData["Title"] = "About";
}

<div class="container py-5">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-4">About Our Mission</h1>
            <p class="lead text-muted">We connect generous donors with meaningful causes, creating positive change in communities around the world.</p>
        </div>
    </div>

    <!-- Mission Statement -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <i class="fas fa-heart fa-3x text-primary"></i>
                    </div>
                    <h4 class="card-title text-center">Our Mission</h4>
                    <p class="card-text">To create a transparent, efficient platform that connects compassionate donors with verified charitable causes, ensuring every donation creates maximum impact in communities that need it most.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <i class="fas fa-eye fa-3x text-success"></i>
                    </div>
                    <h4 class="card-title text-center">Our Vision</h4>
                    <p class="card-text">A world where charitable giving is accessible, transparent, and impactful - where every person has the opportunity to make a difference, regardless of their donation size.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Values Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Our Values</h2>
        </div>
        <div class="col-md-4 mb-3">
            <div class="text-center">
                <i class="fas fa-shield-alt fa-2x text-info mb-3"></i>
                <h5>Transparency</h5>
                <p>Complete visibility into how donations are used and their impact on communities.</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="text-center">
                <i class="fas fa-handshake fa-2x text-warning mb-3"></i>
                <h5>Trust</h5>
                <p>Building lasting relationships through verified campaigns and secure transactions.</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="text-center">
                <i class="fas fa-globe fa-2x text-danger mb-3"></i>
                <h5>Impact</h5>
                <p>Focusing on measurable results that create lasting positive change.</p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <div class="card bg-primary text-white">
                <div class="card-body p-5">
                    <h3>Ready to Make a Difference?</h3>
                    <p class="mb-4">Join our community of changemakers and start supporting causes that matter to you.</p>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-3">
                            <i class="fas fa-user-plus me-2"></i>Get Started
                        </a>
                    }
                    <a asp-controller="Campaigns" asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-search me-2"></i>Browse Campaigns
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
