@model CharityDonationPlatform.Web.ViewModels.Campaigns.CampaignListViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="display-3 fw-bold mb-4">Make a Difference Today</h1>
                <p class="lead mb-5" style="font-size: 1.4rem; line-height: 1.6;">Join thousands of donors helping to create positive change in communities around the world. Every donation matters.</p>
                <div class="d-flex flex-wrap gap-4">
                    <a asp-controller="Campaigns" asp-action="Index" class="btn btn-light btn-lg px-4 py-3" style="border-radius: 50px; font-weight: 600;">
                        <i class="fas fa-search me-3"></i>Browse Campaigns
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg px-4 py-3" style="border-radius: 50px; font-weight: 600; border-width: 2px;">
                            <i class="fas fa-user-plus me-3"></i>Join Us
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-heart" style="font-size: 12rem; opacity: 0.8; color: rgba(255,255,255,0.9);"></i>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5" style="background-color: #f8fafc; padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold mb-3" style="color: #1e293b;">Our Impact</h2>
                <p class="lead text-muted">See the difference we're making together</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100 text-center" style="background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
                    <i class="fas fa-donate mb-4" style="font-size: 3.5rem; color: #2563eb;"></i>
                    <h3 class="fw-bold mb-3" style="color: #1e293b; font-size: 2.5rem;">$@(Model.Campaigns?.Sum(c => c.AmountRaised).ToString("N0") ?? "0")</h3>
                    <p class="text-muted mb-0" style="font-size: 1.1rem;">Total Raised</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100 text-center" style="background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
                    <i class="fas fa-bullhorn mb-4" style="font-size: 3.5rem; color: #2563eb;"></i>
                    <h3 class="fw-bold mb-3" style="color: #1e293b; font-size: 2.5rem;">@(Model.TotalCount)</h3>
                    <p class="text-muted mb-0" style="font-size: 1.1rem;">Active Campaigns</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100 text-center" style="background: white; border-radius: 20px; padding: 40px 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
                    <i class="fas fa-users mb-4" style="font-size: 3.5rem; color: #2563eb;"></i>
                    <h3 class="fw-bold mb-3" style="color: #1e293b; font-size: 2.5rem;">1,000+</h3>
                    <p class="text-muted mb-0" style="font-size: 1.1rem;">Happy Donors</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5" style="background: white; padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold mb-3" style="color: #1e293b;">How It Works</h2>
                <p class="lead text-muted">Simple steps to make a meaningful impact</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-5 text-center">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 100px; height: 100px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                        <i class="fas fa-search" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-3" style="color: #1e293b;">1. Browse Campaigns</h4>
                <p class="text-muted" style="font-size: 1.1rem; line-height: 1.6;">Discover causes that matter to you from our curated collection of verified campaigns.</p>
            </div>
            <div class="col-lg-4 mb-5 text-center">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 100px; height: 100px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                        <i class="fas fa-heart" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-3" style="color: #1e293b;">2. Choose Your Cause</h4>
                <p class="text-muted" style="font-size: 1.1rem; line-height: 1.6;">Select the campaign that resonates with your values and desired impact.</p>
            </div>
            <div class="col-lg-4 mb-5 text-center">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 100px; height: 100px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;">
                        <i class="fas fa-donate" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-3" style="color: #1e293b;">3. Make a Donation</h4>
                <p class="text-muted" style="font-size: 1.1rem; line-height: 1.6;">Contribute any amount securely and track the impact of your generosity.</p>
            </div>
        </div>
    </div>
</section>

<!-- About Our Mission Section -->
<section class="py-5" style="background-color: #f8fafc; padding: 100px 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h2 class="display-5 fw-bold mb-4" style="color: #1e293b;">Our Mission</h2>
                <p class="lead mb-4" style="color: #475569; font-size: 1.3rem;">We believe in the power of collective action to create positive change in the world.</p>
                <p class="mb-4" style="color: #64748b; font-size: 1.1rem; line-height: 1.7;">Through our platform, we connect generous donors with verified charitable campaigns that make a real difference in communities worldwide. Every donation, regardless of size, contributes to meaningful impact.</p>
                <ul class="list-unstyled">
                    <li class="mb-3 d-flex align-items-center">
                        <i class="fas fa-check me-3" style="color: #2563eb; font-size: 1.2rem;"></i>
                        <span style="font-size: 1.1rem; color: #475569;">100% verified campaigns</span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <i class="fas fa-check me-3" style="color: #2563eb; font-size: 1.2rem;"></i>
                        <span style="font-size: 1.1rem; color: #475569;">Transparent fund tracking</span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <i class="fas fa-check me-3" style="color: #2563eb; font-size: 1.2rem;"></i>
                        <span style="font-size: 1.1rem; color: #475569;">Regular impact updates</span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <i class="fas fa-check me-3" style="color: #2563eb; font-size: 1.2rem;"></i>
                        <span style="font-size: 1.1rem; color: #475569;">Global reach, local impact</span>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-globe" style="font-size: 10rem; color: #cbd5e1; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 text-white" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); padding: 100px 0;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-4">Ready to Make a Difference?</h2>
                <p class="lead mb-5" style="font-size: 1.3rem; line-height: 1.6;">Every donation, no matter the size, has the power to transform lives and create lasting change in communities worldwide.</p>
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Campaigns" asp-action="Index" class="btn btn-light btn-lg px-5 py-3" style="border-radius: 50px; font-weight: 600; color: #2563eb;">
                            <i class="fas fa-donate me-3"></i>Start Donating
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-5 py-3" style="border-radius: 50px; font-weight: 600; color: #2563eb;">
                            <i class="fas fa-user-plus me-3"></i>Join Our Community
                        </a>
                    }
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg px-5 py-3" style="border-radius: 50px; font-weight: 600; border-width: 2px;">
                        <i class="fas fa-info-circle me-3"></i>Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FEATURED CAMPAIGNS - AT THE BOTTOM -->
<section class="py-5" style="background: white; padding: 100px 0;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3" style="color: #1e293b;">Featured Campaigns</h2>
            <p class="lead text-muted">Support these urgent causes and make an immediate impact</p>
            <div class="mx-auto" style="width: 100px; height: 4px; background: linear-gradient(135deg, #2563eb, #1d4ed8); border-radius: 2px; margin-top: 30px;"></div>
        </div>

        @if (Model.Campaigns != null && Model.Campaigns.Any())
        {
            <div class="row justify-content-center">
                @foreach (var campaign in Model.Campaigns.Take(3))
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 border-0 campaign-card" style="border-radius: 20px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.08); transition: all 0.3s ease;">
                            <img src="@(string.IsNullOrEmpty(campaign.ImageUrl) ? "/images/default-campaign.jpg" : campaign.ImageUrl)"
                                 class="card-img-top" alt="@campaign.Title" style="height: 220px; object-fit: cover;" />
                            <div class="card-body d-flex flex-column p-4" style="background: white;">
                                <h5 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.3rem;">@campaign.Title</h5>
                                <p class="text-muted mb-4" style="line-height: 1.6;">
                                    @if (!string.IsNullOrEmpty(campaign.Description))
                                    {
                                        @(campaign.Description.Length > 100 ? campaign.Description.Substring(0, 100) + "..." : campaign.Description)
                                    }
                                </p>

                                <!-- Progress Section -->
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="fw-bold" style="color: #1e293b;">$@campaign.AmountRaised.ToString("N0")</span>
                                        <span class="text-muted">of $@campaign.TargetAmount.ToString("N0")</span>
                                    </div>
                                    <div class="progress mb-3" style="height: 8px; border-radius: 10px; background-color: #e2e8f0;">
                                        <div class="progress-bar"
                                             style="width: @Math.Min(campaign.ProgressPercentage, 100)%; background: linear-gradient(135deg, #2563eb, #1d4ed8); border-radius: 10px;"
                                             role="progressbar"></div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-bold" style="color: #2563eb; font-size: 0.9rem;">@campaign.ProgressPercentage.ToString("F1")% funded</span>
                                        <span class="text-muted" style="font-size: 0.9rem;">@campaign.DaysLeft days left</span>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <a asp-controller="Campaigns" asp-action="Details" asp-route-id="@campaign.Id"
                                       class="btn w-100 fw-bold py-3"
                                       style="background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white; border-radius: 15px; border: none;">
                                        <i class="fas fa-eye me-2"></i>View Details & Donate
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a asp-controller="Campaigns" asp-action="Index"
                   class="btn btn-outline-primary btn-lg px-5 py-3"
                   style="border-radius: 50px; font-weight: 600; border-width: 2px; border-color: #2563eb; color: #2563eb;">
                    <i class="fas fa-list me-3"></i>View All Campaigns
                </a>
            </div>
        }
        else
        {
            <div class="text-center">
                <div class="card border-0" style="border-radius: 20px; background-color: #f8fafc; padding: 60px 40px;">
                    <i class="fas fa-exclamation-circle mb-4" style="font-size: 4rem; color: #cbd5e1;"></i>
                    <h4 class="fw-bold mb-3" style="color: #1e293b;">No Campaigns Available</h4>
                    <p class="text-muted">Check back soon for new fundraising campaigns to support.</p>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .campaign-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>